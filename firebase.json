{
  "hosting": {
    "public": "build/web",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "detail/**",
        "function": "detail"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}